@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>用户编辑</title>
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all">
    <script src="~/layui/layui.js" charset="utf-8"></script>
    <script src="~/Jquery/jquery-3.3.1.js"></script>
</head>
<body>
    <form class="layui-form">
        <div class="layui-form-item">
            <div class="layui-input-block">
                <input type="hidden" name="Id" id="Id" value=@Model.UserDTO.Id required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">用户名：</label>
            <div class="layui-input-block">
                <input type="text" name="Name" id="Name" value=@Model.UserDTO.Name required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">密码框：</label>
            <div class="layui-input-inline">
                <input type="password" name="Password" id="Password" value=@Model.UserDTO.Password required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-form-mid layui-word-aux">辅助文字</div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">身高：</label>
            <div class="layui-input-block">
                <input type="text" name="Height" id="Height" value=@Model.UserDTO.Height required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">描述：</label>
            <div class="layui-input-block">
                <input type="text" name="Describe" id="Describe" value=@Model.UserDTO.Describe required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item" pane="">
            <label class="layui-form-label">用户角色：</label>
            <div class="layui-input-block">
                @{

                    foreach (var RoleDTO in @Model.RoleDTOs)
                    {
                        if (RoleDTO.IsChoosed)
                        {
                            <input name="Role_Ids" title=@RoleDTO.Name value=@RoleDTO.Id type="checkbox" checked>
                        }
                        else
                        {
                            <input name="Role_Ids" title=@RoleDTO.Name value=@RoleDTO.Id type="checkbox">
                        }
                    }
                }
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
    <script>
        layui.use(['element','form'], function () {
            var form = layui.form;
            //监听提交
            form.on('submit(formDemo)', function (obj) {
                var data = obj.data;
                var Id = $("#Id").val();
                var Name = $("#Name").val();
                var Password = $("#Password").val();
                var Height = $("#Height").val();
                var Describe = $("#Describe").val();
                var chk_value = [];//定义一个数组
                $('input[name="Role_Ids"]:checked').each(function () {//遍历每一个名字为nodes的复选框，其中选中的执行函数
                    chk_value.push($(this).val());//将选中的值添加到数组chk_value中
                });
                var Role_Ids = chk_value.join(",").split(",");
                $.ajax({
                    url: "/User/Update",
                    type: "post",
                    data: { Id: Id,Name: Name, Password: Password, Height: Height, Describe: Describe, Role_Ids: Role_Ids },
                    dataType: "json",
                    success: function (data) {
                        if (data.State == "success") {
                            alert("修改成功");
                        }
                        else {
                            alert("修改失败");
                        }
                    },
                    error: function () {
                        window.location.href = '/General/Error';
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>
